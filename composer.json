{
    "name": "suilven/freetextsearch",
    "type": "library",
    "description": "Freetext Search base package for SilverStripe searching",
    "keywords": [
        "suilven",
        "freetextsearch"
    ],
    "homepage": "https://github.com/suilven/freetextsearch",
    "license": "MIT",
    "authors": [
        {
            "name": "Gordon Anderson",
            "email": "gordon.b.anderson@gmail.com",
            "homepage": "https://github.com/gordonbanderson",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7",
        "silverstripe/recipe-cms": "^4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Suilven\\FreeTextSearch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Suilven\\FreeTextSearch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "checkpsr2": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fixpsr2": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "phpstan": "vendor/bin/phpstan analyse --level=3 -c tests/phpstan.neon src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
